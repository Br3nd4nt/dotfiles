# Ghostty configuration
# Generated by Chezmoi for {{ .chezmoi.hostname }}

# Font configuration
font-family = "JetBrains Mono Nerd Font"
font-size = 14

# Window configuration
window-padding-x = 20
window-padding-y = 20
window-decorations = false

# Colors
background = #0a0a0a
foreground = #d0d0d0
cursor = #d0d0d0

# Selection colors
selection-background = #404040
selection-foreground = #d0d0d0

# URL colors
url-color = #0087bd

# Bell colors
bell-color = #ff5f00

# Tab bar colors
tab-bar-background = #0a0a0a
tab-bar-active-background = #404040
tab-bar-active-foreground = #d0d0d0
tab-bar-inactive-background = #0a0a0a
tab-bar-inactive-foreground = #808080

# Key bindings
keybind = ctrl+shift+c=copy
keybind = ctrl+shift+v=paste
keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+w=close_tab
keybind = ctrl+shift+left=previous_tab
keybind = ctrl+shift+right=next_tab

# Shell integration
shell-integration = enabled
